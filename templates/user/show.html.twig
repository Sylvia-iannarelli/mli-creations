{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="text-light">Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="justify-content-center d-flex flex-nowrap gap-3">
        <a class="btn btn-outline-dark" href="{{ path('app_user_index') }}">Retour à la liste</a>

        <a class="btn btn-outline-dark" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>    
        
{% endblock %}
