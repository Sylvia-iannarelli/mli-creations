{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-light">Liste des utilisateurs</h1>

    <a class="btn btn-outline-warning mb-3" href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>

    <table class="table align-middle table-warning table-striped" style="--bs-table-color-type: #343a40; --bs-table-striped-color: #343a40;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rôle(s)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <div class="justify-content-center d-flex flex-nowrap gap-3">
                        <a class="btn btn-outline-dark" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
