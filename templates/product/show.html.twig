{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img src="{{asset('/uploads/photos')}}/{{ product.picture }}" alt="Image du produit">
                </td>
            </tr>
            <tr>
                <th>Prix (TTC)</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Délai de livraison (approximatif)</th>
                <td>{{ product.deliveryTime }}</td>
            </tr>
            <tr>
                <th>Couleur principale</th>
                <td>{{ product.mainColor }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ product.available ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="justify-content-center d-flex flex-nowrap gap-3">
        <a class="btn btn-outline-dark" href="{{ path('app_product_index') }}">Retour à la liste</a>

        <a class="btn btn-outline-dark" href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

        {{ include('product/_delete_form.html.twig') }}
    </div>    
        
{% endblock %}
