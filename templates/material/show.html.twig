{% extends 'base.html.twig' %}

{% block title %}Matériau{% endblock %}

{% block body %}
    <h1 class="text-light">Matériau</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ material.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="justify-content-center d-flex flex-nowrap gap-3">
        <a class="btn btn-outline-dark" href="{{ path('app_material_index') }}">Retour à la liste</a>

        <a class="btn btn-outline-dark" href="{{ path('app_material_edit', {'id': material.id}) }}">Modifier</a>

        {{ include('material/_delete_form.html.twig') }}
    </div>    
        
{% endblock %}
